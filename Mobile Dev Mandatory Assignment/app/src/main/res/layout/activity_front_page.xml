<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="WillBlackney.MandatoryAssignment.FrontPageActivity">

    <TextView
        android:id="@+id/welcomeField"
        android:layout_width="66dp"
        android:layout_height="24dp"
        android:text="Welcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/userNameField"
        android:layout_width="209dp"
        android:layout_height="27dp"
        android:text="william.blackney@hotmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <Button
            android:id="@+id/viewAllRoomsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnViewAllRoomsButtonClicked"
            android:text="View All Rooms" />
        <Button
            android:id="@+id/viewAllReservationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnViewAllReservationsButtonClicked"
            android:text="View All Reservations" />
        <Button
            android:id="@+id/bookRoomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnBookRoomButtonClicked"
            android:text="Book Room" />
        <Button
            android:id="@+id/myReservationsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnMyReservationsButtonClicked"
            android:text="My Reservations" />
        <Button
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnLogOutButtonClicked"
            android:text="Log Out" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
